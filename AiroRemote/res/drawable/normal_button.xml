<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="270" android:endColor="@color/button_light" android:startColor="@color/button_dark" />

            <stroke android:width="2dp" android:color="@color/button_stroke" />

            <corners android:radius="5dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
    <item android:state_focused="true"><shape>
            <gradient android:angle="270" android:centerColor="@color/button_dark" android:endColor="@color/button_dark" android:startColor="@color/button_dark" />

            <stroke android:width="2dp" android:color="@color/button_stroke" />

            <corners android:radius="4dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
    <item android:state_enabled="false"><shape>

            <stroke android:width="2dp" android:color="@color/button_disabled_stroke" />

            <corners android:radius="4dp" />

            <solid android:color="#babcbc" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="@color/button_dark" android:startColor="@color/button_light" />

            <stroke android:width="2dp" android:color="@color/button_stroke" />

            <corners android:radius="4dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>

</selector>