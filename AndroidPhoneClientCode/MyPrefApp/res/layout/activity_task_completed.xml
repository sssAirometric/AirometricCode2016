<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/app_bg"
    android:orientation="vertical"
    tools:context="com.airometric.TaskCompletedActivity" >

    <LinearLayout android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="Test Completed!"/>
        
        <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnopenmap"
            android:layout_marginTop="150dp"
            android:text="@string/go_to_map"
             style="@style/app_button"></Button>
        <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnopenmapinbrowser"
            android:layout_marginTop="20dp"
            android:text="@string/go_to_browser"
             style="@style/app_button"></Button>
    </LinearLayout>

</LinearLayout>
